<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/video_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center" />
    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_layout"
        android:id="@+id/movie_title"
        android:paddingLeft="8dp"
        android:text="Doctor Strange"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingLeft="8dp"
        android:weightSum="8"
        android:id="@+id/movie_detail_container"
        android:layout_below="@id/movie_title">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#616161"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:id="@+id/PG"
            />
        <TextView
            android:id="@+id/IMDB"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/movie_duration"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
           />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:layout_below="@id/movie_detail_container"
        android:id="@+id/movie_description"
        android:maxLines="3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more"
        android:drawableEnd="@drawable/arrow_down"
        android:layout_alignParentEnd="true"
        android:paddingEnd="8dp"
        android:textAllCaps="false"
        android:background="@color/background"
        android:layout_below="@+id/movie_description"
        android:text="@string/more_btn"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/director"
        android:paddingLeft="8dp"
        android:layout_below="@id/more"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/director"
            android:textColor="@color/colorNormalTab"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/director_name"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/writer"
        android:paddingLeft="8dp"
        android:layout_below="@id/director"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/writer"
            android:textColor="@color/colorNormalTab"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/writer_name"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/star"
        android:paddingLeft="8dp"
        android:layout_below="@id/writer"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/star"
            android:textColor="@color/colorNormalTab"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/star_name"
            />
    </LinearLayout>



</RelativeLayout>
