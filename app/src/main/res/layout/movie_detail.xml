<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/video_layout">
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/video_view"
            />

        <Button
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:id="@+id/play_button"
            android:layout_gravity="center" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:id="@+id/movie_info_layout"
        android:layout_below="@id/video_layout"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/movie_detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_title"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:id="@+id/PG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#424242"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="1dp"
                android:textColor="#757575"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/IMDB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:drawablePadding="10dp"
                android:textSize="12dp"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/movie_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:drawablePadding="10dp"
                android:textSize="12dp"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:drawablePadding="10dp"
                android:textSize="12dp"
                android:textColor="@color/text_grey" />
        </LinearLayout>

        </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_below="@id/movie_info_layout"
        android:id="@+id/cast_layout"
        android:paddingTop="20dp"
        android:background="@color/background"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/movie_description"
            android:maxLines="3"
            android:textColor="@color/text_grey" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/more"
            android:drawableEnd="@drawable/arrow_down"
            android:layout_alignParentEnd="true"
            android:paddingEnd="8dp"
            android:textAllCaps="false"
            android:background="@color/background"
            android:layout_below="@+id/movie_description"
            android:text="@string/more_btn"
            android:textColor="@color/text_grey"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/director"
            android:layout_below="@id/more"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/director"
                android:textStyle="bold"
                android:textColor="@color/colorNormalTab"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/director_name"
                android:textColor="@color/text_grey"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/writer"
            android:layout_below="@id/director"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/writer"
                android:textStyle="bold"
                android:textColor="@color/colorNormalTab"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/writer_name"
                android:textColor="@color/text_grey"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/star"
            android:layout_below="@id/writer"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/star"
                android:textStyle="bold"
                android:textColor="@color/colorNormalTab"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/star_name"
                android:textColor="@color/text_grey"
                />
        </LinearLayout>

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cast_layout"
        android:background="@color/background"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <GridView
                android:id="@+id/movie_schedule"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:columnWidth="100dp"
                android:horizontalSpacing="0dp"
                android:listSelector="@drawable/back_schedule"
                android:numColumns="7"
                android:scrollbars="horizontal"></GridView>
        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/all_schedule_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hsv"
        android:background="#424242"
        android:scrollbars="vertical" />



</RelativeLayout>
</ScrollView>